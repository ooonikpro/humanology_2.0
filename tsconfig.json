{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "assets": ["./assets"],
      "assets/*": ["./assets/*"],
      "public": ["./public"],
      "public/*": ["./public/*"],
      "@app": ["./src/app/index.ts"],
      "@pages/*": ["./src/pages/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"],
      "@types": ["./@types/index.ts"]
    }
  }
}